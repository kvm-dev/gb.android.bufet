<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_food_card"
    android:layout_width="320dp"
    android:layout_height="140dp"
    android:layout_margin="@dimen/small_margin"
    android:clickable="true"
    android:elevation="4dp"
    android:focusable="true"
    app:cardCornerRadius="40dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/item_food_image"
            android:layout_width="135dp"
            android:layout_height="114dp"
            android:contentDescription="@string/table_image"
            android:scaleType="fitCenter"
            android:src="@drawable/default_food_salad" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/small_padding">

            <TextView
                android:id="@+id/item_food_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Крем-суп из цветной капусты"
                android:paddingBottom="@dimen/big_margin"
                android:textAppearance="?attr/textAppearanceHeadline6"
                android:textSize="@dimen/item_food_text_size" />

            <TextView
                android:id="@+id/item_food_cost"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="350р"
                android:textAppearance="?attr/textAppearanceHeadline6"
                android:textSize="@dimen/item_food_text_size" />
        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>