<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_restaurant_card"
    android:layout_width="296dp"
    android:layout_height="187dp"
    android:layout_margin="@dimen/small_margin"
    android:clickable="true"
    android:focusable="true"
    app:cardCornerRadius="@dimen/medium_corner_radius"
    app:strokeColor="@color/general_color"
    app:strokeWidth="@dimen/item_table_stroke_width">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/small_padding"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/item_table_number_tw">

            <ImageView
                android:id="@+id/item_restaurant_image_iv"
                android:layout_width="match_parent"
                android:layout_height="91dp"
                android:contentDescription="@string/table_image"
                android:scaleType="fitCenter"
                android:src="@drawable/default_table" />

            <TextView
                android:id="@+id/item_restaurant_sits_count_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Кол-во мест: 6"
                android:textAppearance="?attr/textAppearanceHeadline6"
                android:textSize="@dimen/item_table_text_size" />
            <TextView
                android:id="@+id/item_restaurant_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="9:00-23:00"
                android:textAppearance="?attr/textAppearanceHeadline6"
                android:textSize="@dimen/item_table_text_size" />
            <TextView
                android:id="@+id/item_restaurant_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Свиные уши"
                android:textAppearance="?attr/textAppearanceHeadline6"
                android:textSize="@dimen/item_table_text_size" />
        </LinearLayout>


</com.google.android.material.card.MaterialCardView>