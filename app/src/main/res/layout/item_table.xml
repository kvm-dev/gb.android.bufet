<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_dress_card"
    android:layout_width="120dp"
    android:layout_height="196dp"
    android:layout_margin="@dimen/small_margin"
    android:clickable="true"
    android:focusable="true"
    app:cardCornerRadius="@dimen/medium_corner_radius"
    app:strokeColor="@color/general_color"
    app:strokeWidth="@dimen/item_table_stroke_width">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_table_number_tw"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="end"
            android:background="@drawable/item_table_rounded_tw"
            android:gravity="center"
            android:text="4"
            android:textAppearance="?attr/textAppearanceHeadline6"
            android:textSize="@dimen/item_table_text_size"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/small_padding"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/item_table_number_tw">

            <ImageView
                android:id="@+id/item_table_image_iw"
                android:layout_width="match_parent"
                android:layout_height="91dp"
                android:contentDescription="@string/table_image"
                android:scaleType="fitCenter"
                android:src="@drawable/dafault_table" />

            <TextView
                android:id="@+id/item_table_sits_count_tw"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Кол-во мест: 6"
                android:textAppearance="?attr/textAppearanceHeadline6"
                android:textSize="@dimen/item_table_text_size" />
        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:background="@drawable/item_table_rounded_button"
            android:text="@string/item_table_btn_text_zakaz"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>