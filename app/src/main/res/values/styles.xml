<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="default_fragment" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:animateLayoutChanges">true</item>
        <item name="android:background">@color/main_background_color</item>
    </style>

    <style name="navigation_view" parent="">
        <item name="android:layout_width">@dimen/dp0</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:animateLayoutChanges">true</item>
        <item name="android:background">@drawable/menu_background</item>
        <item name="menu">@menu/menu</item>
    </style>

    <style name="navigation_fragment" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp0</item>
        <item name="defaultNavHost">true</item>
    </style>

    <style name="splash_item1" parent="">
        <item name="android:layout_width">@dimen/dp220</item>
        <item name="android:layout_height">@dimen/dp220</item>
    </style>

    <style name="splash_item2" parent="">
        <item name="android:layout_width">@dimen/dp265</item>
        <item name="android:layout_height">@dimen/dp265</item>
    </style>

    <style name="splash_item3" parent="">
        <item name="android:layout_width">@dimen/dp188</item>
        <item name="android:layout_height">@dimen/dp188</item>
    </style>

    <style name="splash_item4" parent="">
        <item name="android:layout_width">@dimen/dp192</item>
        <item name="android:layout_height">@dimen/dp192</item>
    </style>

    <style name="splash_item5" parent="">
        <item name="android:layout_width">@dimen/dp154</item>
        <item name="android:layout_height">@dimen/dp179</item>
    </style>

    <style name="splash_logo" parent="">
        <item name="android:layout_width">@dimen/dp195</item>
        <item name="android:layout_height">@dimen/dp146</item>
    </style>

    <style name="splash_subtitle" parent="">
        <item name="android:layout_marginTop">@dimen/dpm30</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/proletariat</item>
        <item name="android:textSize">@dimen/sp32</item>
        <item name="android:textColor">@color/general_color</item>
        <item name="android:text">@string/splash_subtitle</item>
    </style>

    // поле поиска
    <style name="SearchTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor" tools:override="true" >@color/general_color</item>
        <item name="startIconDrawable">@drawable/ic_search</item>
    </style>

    // Tabs Layout
    <style name="MyCustomTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="tabTextColor">@color/general_color</item>
    </style>

    // стиль cardView item_advertise
    <style name="CustomCardViewStyle" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay_card_custom_corners</item>
        <item name="strokeColor">@color/general_color</item>
        <item name="strokeWidth">2dp</item>
        <item name="cardPreventCornerOverlap">false</item>
    </style>
    <style name="ShapeAppearanceOverlay_card_custom_corners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeBottomRight">16dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    // button in the item_advertise
    <style name="MyButton" parent="Widget.MaterialComponents.Button">
        <item name="shapeAppearanceOverlay">@style/MyShapeAppearance</item>
        <item name="backgroundTint">@color/general_color</item>
    </style>
    <style name="MyShapeAppearance">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeBottomRight">10dp</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeBottomLeft">10dp</item>
    </style>
</resources>