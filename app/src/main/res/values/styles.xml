<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="default_fragment" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:animateLayoutChanges">true</item>
        <item name="android:background">@color/main_background_color</item>
    </style>

    <style name="navigation_view" parent="">
        <item name="android:layout_width">@dimen/dp0</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:animateLayoutChanges">true</item>
        <item name="android:background">@drawable/menu_background</item>
        <item name="menu">@menu/menu</item>
    </style>

    <style name="navigation_fragment" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp0</item>
        <item name="defaultNavHost">true</item>
    </style>

    <style name="splash_item1" parent="">
        <item name="android:layout_width">@dimen/dp220</item>
        <item name="android:layout_height">@dimen/dp220</item>
    </style>

    <style name="splash_item2" parent="">
        <item name="android:layout_width">@dimen/dp265</item>
        <item name="android:layout_height">@dimen/dp265</item>
    </style>

    <style name="splash_item3" parent="">
        <item name="android:layout_width">@dimen/dp188</item>
        <item name="android:layout_height">@dimen/dp188</item>
    </style>

    <style name="splash_item4" parent="">
        <item name="android:layout_width">@dimen/dp192</item>
        <item name="android:layout_height">@dimen/dp192</item>
    </style>

    <style name="splash_item5" parent="">
        <item name="android:layout_width">@dimen/dp154</item>
        <item name="android:layout_height">@dimen/dp179</item>
    </style>

    <style name="splash_logo" parent="">
        <item name="android:layout_width">@dimen/dp195</item>
        <item name="android:layout_height">@dimen/dp146</item>
    </style>

    <style name="splash_subtitle" parent="">
        <item name="android:layout_marginTop">@dimen/dpm30</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/proletariat</item>
        <item name="android:textSize">@dimen/sp32</item>
        <item name="android:textColor">@color/general_color</item>
        <item name="android:text">@string/splash_subtitle</item>
    </style>

    <style name="search_layout_style" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="strokeColor">@color/general_color</item>
        <item name="boxStrokeColor" tools:override="true" >@color/general_color</item>
        <item name="startIconDrawable">@drawable/ic_search</item>
    </style>

    <style name="restaurant_card_view" parent="">
        <item name="android:layout_margin">@dimen/dp30</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="elevation">@dimen/dp2</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="cardCornerRadius">@dimen/dp12</item>
        <item name="strokeColor">@color/general_color</item>
        <item name="strokeWidth">@dimen/dp1</item>
    </style>

    <style name="restaurant_header_image_corners" parent="">
        <item name="cornerSizeTopLeft">12%</item>
        <item name="cornerSizeTopRight">12%</item>
    </style>

    <style name="base_constraint" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="restaurant_card_linear" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:weightSum">@integer/two</item>
    </style>

    <style name="restaurant_card_linear_item" parent="">
        <item name="android:layout_width">@dimen/dp0</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">@integer/one</item>
    </style>

    <style name="restaurant_card_table_icon" parent="">
        <item name="android:layout_width">@dimen/dp30</item>
        <item name="android:layout_height">@dimen/dp30</item>
        <item name="android:layout_marginTop">@dimen/dp4</item>
        <item name="android:layout_marginBottom">@dimen/dp4</item>
        <item name="android:layout_marginStart">@dimen/dp30</item>
        <item name="android:src">@drawable/tables</item>
    </style>

    <style name="restaurant_card_table_counter" parent="">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">@integer/one</item>
        <item name="android:layout_marginTop">@dimen/dp4</item>
        <item name="android:layout_marginBottom">@dimen/dp4</item>
        <item name="android:layout_marginStart">@dimen/dp10</item>
        <item name="android:textSize">@dimen/sp18</item>
        <item name="android:paddingLeft">@dimen/dp4</item>
        <item name="android:paddingRight">@dimen/dp4</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="restaurant_card_work_time_icon" parent="">
        <item name="android:layout_width">@dimen/dp30</item>
        <item name="android:layout_height">@dimen/dp30</item>
        <item name="android:layout_marginTop">@dimen/dp4</item>
        <item name="android:layout_marginBottom">@dimen/dp4</item>
        <item name="android:layout_marginEnd">@dimen/dp10</item>
        <item name="android:src">@drawable/time</item>
    </style>

    <style name="restaurant_card_work_time_data" parent="">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">@integer/one</item>
        <item name="android:layout_marginTop">@dimen/dp4</item>
        <item name="android:layout_marginBottom">@dimen/dp4</item>
        <item name="android:layout_marginEnd">@dimen/dp30</item>
        <item name="android:textSize">@dimen/sp18</item>
        <item name="android:paddingLeft">@dimen/dp4</item>
        <item name="android:paddingRight">@dimen/dp4</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="restaurant_card_header" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp133</item>
        <item name="android:layout_gravity">center_horizontal|top</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="shapeAppearanceOverlay">@style/restaurant_header_image_corners</item>
    </style>

    <style name="restaurant_card_title" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/restaurant_title_background</item>
        <item name="android:paddingLeft">@dimen/dp30</item>
        <item name="android:paddingRight">@dimen/dp30</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginTop">@dimen/dp18</item>
        <item name="android:layout_marginBottom">@dimen/dp18</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/sp22</item>
    </style>

    <style name="main_display_main_container" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="main_display_title" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/dp30</item>
        <item name="android:layout_marginRight">@dimen/dp30</item>
        <item name="fontFamily">@font/proletariat</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="maxLines">@integer/two</item>
        <item name="android:layout_marginTop">@dimen/dp45</item>
        <item name="android:text">@string/main_display_title</item>
        <item name="android:textSize">@dimen/sp32</item>
    </style>

    <style name="main_display_advertise_recycler" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp150</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginTop">@dimen/dp12</item>
    </style>

    <style name="search_input">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:inputType">text</item>
        <item name="maxLines">@integer/one</item>
    </style>

    <style name="match_match_container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>
</resources>